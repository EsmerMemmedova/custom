@using doorang.Core.Models;
﻿
@model Explore

<div class="container">
    <form method="post">
        <div class="row">
            <div class="mb-3 col-md-4">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" style="color:red"></span>
            </div>
           
            <div class="mb-3 col-md-4">
                <label asp-for="ImgFile" class="form-label">PhotoFile</label>
                <input asp-for="ImgFile" class="form-control">
                <span asp-validation-for="ImgFile" style="color:red"></span>
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-8">
                <label for="Description" class="form-label">Description</label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                <span asp-validation-for="Description" style="color:red"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>